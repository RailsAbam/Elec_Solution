<h1>Friends Lists</h1>

<table id="friends">
  <% @friends.each do |friend| %>
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend, class:"btn btn-outline-info " %>
    </p>
  <% end %>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-outline-info "%>


