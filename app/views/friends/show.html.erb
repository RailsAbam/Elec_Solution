<div class="col-md-6">
        <div class="h-100 p-5 text-white bg-dark rounded-3">
          <h2><%= @friend.first_name%> <%= @friend.last_name %>,</h2>
          <p><%=  @friend.first_name %>  <%= @friend.email %>  <%= @friend.phone %>  <%= @friend.address %>  <%= @friend.state %></p>
<button class="btn btn-outline-light" type="button">
<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend),class:"btn btn-outline-info btn-sm" %>
  <%= link_to "Back to friends", friends_path,class:"btn btn-outline-info btn-sm" %>
  <%= button_to "Delete", @friend, method: :delete, data: {confirm: "Are you sure you want to delete "},class:"btn btn-outline-danger btn-lg bs-btn-font-weight: 100 " %>
</div>
</button>
</div>
</div>

